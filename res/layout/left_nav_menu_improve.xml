<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigation_menu_layout"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/menu_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <RelativeLayout
            android:id="@+id/line_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/nav_bt_searchfriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/searchbtbk"
                android:contentDescription="@string/nav"
                android:scaleType="centerCrop" />

            <ImageButton
                android:id="@+id/nav_bt_leaderboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/nav_bt_searchfriend"
                android:adjustViewBounds="true"
                android:background="@drawable/leaderboardbtbk"
                android:contentDescription="@string/nav"
                android:scaleType="centerCrop" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_0" >

            <ImageButton
                android:id="@+id/nav_bt_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/noticebtbk"
                android:contentDescription="@string/nav"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/notice_count_tv"
                style="@style/message_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/nav_bt_notice"
                android:layout_alignTop="@+id/nav_bt_notice"
                android:layout_marginRight="22.0dip"
                android:layout_marginTop="15.0dip" />

            <ImageButton
                android:id="@+id/nav_bt_myself"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/nav_bt_notice"
                android:adjustViewBounds="true"
                android:background="@drawable/myinfobtbk"
                android:contentDescription="@string/nav"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/my_count_tv"
                style="@style/message_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/nav_bt_myself"
                android:layout_alignTop="@+id/nav_bt_myself"
                android:layout_marginRight="17.0dip"
                android:layout_marginTop="15.0dip"
                android:text="!" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_1" >

            <ImageButton
                android:id="@+id/nav_bt_chorus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/chorusbtbk"
                android:contentDescription="@string/nav"
                android:scaleType="centerCrop" />

            <ImageButton
                android:id="@+id/nav_bt_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/nav_bt_chorus"
                android:adjustViewBounds="true"
                android:background="@drawable/my_friendbtbk"
                android:contentDescription="@string/nav"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/chorus_count_tv"
                style="@style/message_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/nav_bt_chorus"
                android:layout_alignTop="@+id/nav_bt_chorus"
                android:layout_marginRight="22.0dip"
                android:layout_marginTop="15.0dip" />

            <TextView
                android:id="@+id/navigation_follow_user_work_count_tv"
                style="@style/message_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/nav_bt_follow"
                android:layout_alignTop="@+id/nav_bt_follow"
                android:layout_marginRight="22.0dip"
                android:layout_marginTop="15.0dip" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_2" >

            <ImageButton
                android:id="@+id/nav_bt_contest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/contestbtbk"
                android:contentDescription="@string/nav"
                android:scaleType="centerCrop" />

            <ImageButton
                android:id="@+id/nav_bt_topboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/nav_bt_contest"
                android:adjustViewBounds="true"
                android:background="@drawable/topbtbk"
                android:contentDescription="@string/nav"
                android:scaleType="centerCrop" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/top_nav"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/menu_buttons"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/menu_buttons"
        android:background="@drawable/top_nav_bg" >

        <LinearLayout
            android:id="@+id/area_layer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/logoimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/nav"
                android:scaleType="center"
                android:src="@drawable/navigation_logo" />

            <TextView
                android:id="@+id/area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12.0dip"
                android:drawablePadding="7.0dip"
                android:drawableRight="@drawable/navigation_arrow"
                android:gravity="left|center"
                android:text="@string/default_area"
                android:textColor="#ffaa8f7d"
                android:textSize="16.0dip" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/nav_bt_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/transparent"
            android:contentDescription="@string/nav"
            android:paddingBottom="15.0dip"
            android:paddingLeft="15.0dip"
            android:scaleType="center"
            android:src="@drawable/set_up" />
    </RelativeLayout>

    <ViewStub
        android:id="@+id/area_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_nav"
        android:layout_centerInParent="true"
        android:layout_marginTop="-20.0dip"
        android:inflatedId="@+id/area_guide_img"
        android:layout="@layout/guide_tips" />

    <ImageView
        android:id="@+id/shadow"
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@id/top_nav"
        android:background="@drawable/menu_shadow"
        android:contentDescription="@null"
        android:visibility="gone"
         />

</RelativeLayout>