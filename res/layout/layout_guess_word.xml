<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/all_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/navigatebar"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@drawable/title_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="8.0dip"
        android:paddingRight="8.0dip"
        android:paddingTop="6.0dip" >

        <Button
            android:id="@+id/gobackbt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/title_bar_button"
            android:paddingLeft="4.0dip"
            android:paddingRight="4.0dip"
            android:text="@string/cancel"
            android:textColor="#ffffffff"
            android:textSize="14.0dip" />

        <TextView
            android:id="@+id/title"
            style="@style/titleshadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="8.0dip"
            android:gravity="center"
            android:text="@string/str_listen_word"
            android:textColor="#ffffffff" />
    </RelativeLayout>

    <ImageView 
        		android:layout_width="fill_parent"
        		android:layout_height="140dp"
        		android:src="@drawable/xiongmao1"
        		android:scaleType="fitXY"
        		/>
    <TextView 
	    		android:id="@+id/textQuestion"
	    		android:layout_height="wrap_content"
	    		android:layout_width="fill_parent"
	    		style="@style/text_long_button_guess_word_question"
	    		/>
    
    <TextView 
	    		android:id="@+id/textA"
	    		android:layout_height="wrap_content"
	    		android:layout_width="fill_parent"
	    		android:text="is"
	    		android:layout_marginTop="30dp"
	    		style="@style/text_long_button_guess_word"
	    		/>
	<TextView 
	    		android:id="@+id/textB"
	    		android:layout_height="wrap_content"
	    		android:layout_width="fill_parent"
	    		android:layout_marginTop="30dp"
	    		android:text="book"
	    		style="@style/text_long_button_guess_word"
	    		/>
	<TextView 
	    		android:id="@+id/textC"
	    		android:layout_height="wrap_content"
	    		android:layout_width="fill_parent"
	    		android:layout_marginTop="30dp"
	    		android:text="chew"
	    		style="@style/text_long_button_guess_word"
	    		/>
	<TextView 
	    		android:id="@+id/textD"
	    		android:layout_height="wrap_content"
	    		android:layout_width="fill_parent"
	    		android:layout_marginTop="30dp"
	    		android:text="are"
	    		style="@style/text_long_button_guess_word"
	    		/>
	
	<include layout="@layout/footer"/>
</LinearLayout>