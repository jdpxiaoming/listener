<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp" 
    android:background="@drawable/tb_bg_bottom"
    >
    
    <ImageView 
        		android:id="@+id/imgbtnLeftOfFooter"
        		android:background="@drawable/button_navigation"
        		android:layout_centerVertical="true"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:scaleType="fitStart"
        		/>
    <ImageView 
        		android:id="@+id/imgbtnRightOfFooter"
        		android:src="@drawable/button_more"
        		android:layout_centerVertical="true"
        		android:layout_alignParentRight="true"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_margin="5dp"
        		android:scaleType="fitEnd"
        		/>
    <ImageView 
        		android:id="@+id/imgbtnCenterOfFooter"
        		android:src="@drawable/button_singing"
        		android:layout_centerInParent="true"
        		android:layout_width="100dp"
        		android:layout_height="fill_parent"
        		android:scaleType="centerInside"
        		/>

</RelativeLayout>
